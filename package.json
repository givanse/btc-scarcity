{
  "private": true,
  "workspaces": ["functions/*"],
  "name": "btc-scarcity",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "per-env",
    "start:production": "npm run -s serve",
    "start:development": "npm run -s dev",
    "production": "preact build -p --template src/index.html",
    "build": "preact build --template src/index.html",
    "serve": "preact build --template src/index.html && preact serve",
    "dev": "preact watch --template src/index.html",
    "lint": "eslint src",
    "test": "jest",
    "lambda": "NODE_ENV=development netlify dev"
  },
  "eslintConfig": {
    "extends": "eslint-config-synacor"
  },
  "eslintIgnore": [
    "build/*"
  ],
  "devDependencies": {
    "babel-jest": "22.4.3",
    "eslint": "^4.9.0",
    "eslint-config-synacor": "^2.0.2",
    "jest": "^21.2.1",
    "jest-preset-preact": "^1.0.0",
    "per-env": "^1.0.2",
    "postcss-custom-media": "^7.0.8",
    "preact-cli": "^2.1.0",
    "preact-render-spy": "^1.2.1",
    "tailwindcss": "^1.1.3"
  },
  "dependencies": {
    "preact": "^8.5.2",
    "preact-compat": "^3.17.0",
    "preact-render-to-string": "^4.1.0",
    "preact-router": "^2.5.7"
  },
  "jest": {
    "preset": "jest-preset-preact"
  }
}
